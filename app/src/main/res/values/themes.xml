<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Jadwalku" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <style name="Theme.Jadwalku" parent="Base.Theme.Jadwalku" />

    <!-- Splash Theme -->
    <style name="Theme.Jadwalku.Splash" parent="Base.Theme.Jadwalku">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/bg_gradient</item>
    </style>

    <!-- No ActionBar Theme -->
    <style name="Theme.Jadwalku.NoActionBar" parent="Base.Theme.Jadwalku">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>